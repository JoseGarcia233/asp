@model IEnumerable<Entidad_System1.productos>

@{
    ViewBag.Title = "Show_Datos";
}
<a href="/Producto/Index" class="btn btn-primary">Regresar </a>

<div style="width:96%;text-align:center;">

    <h2>Lista de Productos</h2>

</div>

<form action="/Producto/Filter">

    <div class="col-md-6 col-sm-6 col-xs-6 text-left">

        <button type="submit" class="btn btn-success">Buscar</button>


        <input type="text" class="form-control" name="Nombre" placeholder="Ingrese Nombre del Producto" />
    </div>
    @*<div style="width:100%;text-align:right;">

            @Html.ActionLink("Agregar producto", "Form", null, new { @class = "btn btn-info" })
        </div>*@


</form>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.ActionLink("Editar", "Update", new { id = item.ID }, new { @class = "btn btn-info" }) ||
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
