@model Entidad_System1.inventario

@{
    ViewBag.Title = "Editar Inventario";
}

<a href="/Inventario/Show_Datos_I" class="btn btn-primary">Regresar </a>
<div style="width:100%;text-align:center;">

    <h2>@ViewBag.Title</h2>

</div>

