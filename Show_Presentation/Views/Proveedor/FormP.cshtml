@model Entidad_System1.proveedores

@{
    ViewBag.Title = "Ingreso de Proveedores";
}


<a href="/Proveedor/Index" class="btn btn-primary">Regresar </a>

<div style="width:96%;text-align:center;">

    <h2>Ingreso de Proveedores</h2>

</div>


@using (Html.BeginForm())
{
